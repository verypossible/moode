<section class="container">
  <div class="player-container">
    <section class="left">
      <div class="image-wrapper"></div>
    </section>

    <section class="right">
      <div class="song-info">
        <h4 class="now-playing">Now Playing</h4>
        <h1 class="song-title">Song title</h1>
        <h3 class="artist-name">Artist Name</h3>
      </div>
      <div class="player-controls">
        <a href="/">
          <%= img_tag("/images/icon-prev.svg", class: "prev-icon") %>
        </a>
        <a href="/">
          <%= img_tag("/images/icon-play.svg", class: "play-icon") %>
        </a>
        <a href="/">
          <%= img_tag("/images/icon-next.svg", class: "next-icon") %>
        </a>
      </div>
    </section>
  </div>
</section>
